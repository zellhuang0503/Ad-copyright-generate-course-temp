rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users: 使用者只能讀寫自己的檔案
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Saved Ads: 使用者只能 CRUD 自己的收藏
    match /saved_ads/{adId} {
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow read, update, delete: if isAuthenticated() && resource.data.user_id == request.auth.uid;
    }
    
    // Logs: 僅後端/管理員可寫入 (這裡簡化為禁止前端直接寫入，應由 Cloud Function 處理)
    match /generation_logs/{logId} {
      allow read, write: if false; 
    }
  }
}
